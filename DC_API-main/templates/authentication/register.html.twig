{% extends 'base.html.twig' %}

{% block header %}

  {% include "components/home/navbar.html.twig" %}

{% endblock %}
{% block body %}

{{ form_start(form) }}
<section class="bg-white mt-10">
  <div class="lg:grid lg:min-h-screen lg:grid-cols-12">
    <section
      class="relative flex h-32 items-end bg-gray-900 lg:col-span-5 lg:h-full xl:col-span-6"
    >
      <img
        alt="Night"
        src="{{ asset('/images/baf_ville.jpeg') }}"
        class="absolute inset-0 h-full w-full object-cover opacity-80"
      />
    </section>

    <main
      class="flex items-center justify-center px-8 py-8 sm:px-12 lg:col-span-7 lg:px-16 lg:py-12 xl:col-span-6 gap-y-5"
    >
      <div class="max-w-xl lg:max-w-3xl">
<h1>Inscription</h1>

        <div class="mt-8 grid grid-cols-6 gap-6">
          <div class="col-span-6 sm:col-span-3">
            <label
              for="FirstName"
              class="block text-sm font-medium text-gray-700"
            >

            </label>
         {{ form_row(form.lastname) }}
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label
              for="LastName"
              class="block text-sm font-medium text-gray-700"
            >
            </label>
            {{ form_row(form.firstname) }}
          </div>

          <div class="col-span-6">
            {{ form_row(form.email) }}
          </div>

          <div class="col-span-6 sm:col-span-3">
            {{ form_row(form.password) }}
          </div>   

          <div class="col-span-6">
            <p class="text-sm text-gray-500">
              En créant un compte, vous acceptez nos
              <a href="#" class="text-gray-700 underline">
                conditions générales et notre</a>
              et
              <a href="#" class="text-gray-700 underline">politique de confidentialité.</a>.
            </p>
          </div>

          <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
            {{ form_row(form.valider)}} 
            <p class="mt-4 text-sm text-gray-500 sm:mt-0">
              Vous avez déja un compte?
              <a href="#" class="text-gray-700 underline">Connectez-vous</a>.
            </p>
          </div>
        </div>
      </div>
    </main>
  </div>
</section>
{{ form_rest(form) }}
{{ form_end(form) }}
{% endblock %}
